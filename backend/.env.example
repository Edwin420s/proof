# Server Configuration
PORT=5000
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/proof_db
DATABASE_URL_TEST=postgresql://username:password@localhost:5432/proof_test_db

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-refresh-token-secret-change-this

# Encryption
ENCRYPTION_KEY=32-byte-hex-key-for-aes-256-gcm-encryption

# Blockchain - Polygon Network
POLYGON_RPC_URL=https://polygon-mumbai.g.alchemy.com/v2/YOUR_API_KEY
ADMIN_WALLET_ADDRESS=0xYourAdminWalletAddress
ADMIN_WALLET_PRIVATE_KEY=your-private-key-without-0x

# Smart Contract Addresses (Set after deployment)
ISSUER_REGISTRY_ADDRESS=0xYourIssuerRegistryContractAddress
CREDENTIAL_REGISTRY_ADDRESS=0xYourCredentialRegistryContractAddress
DID_REGISTRY_ADDRESS=0xYourDIDRegistryContractAddress
CONTRACT_ADDRESS=0xYourCredentialRegistryContractAddress

# PolygonScan API (for contract verification)
POLYGONSCAN_API_KEY=your-polygonscan-api-key

# IPFS
IPFS_API_URL=http://localhost:5001
IPFS_GATEWAY_URL=https://ipfs.io/ipfs

# Polygon ID (optional for ZK proofs)
POLYGON_ID_API_URL=https://api.polygonid.com/v1
POLYGON_ID_API_KEY=your-polygon-id-api-key

# Email (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@proofidentity.com

# Redis (optional for rate limiting and queues)
REDIS_URL=redis://localhost:6379

# App URLs
APP_URL=http://localhost:3000
API_URL=http://localhost:5000

# Logging
LOG_LEVEL=info

# Feature Flags
ENABLE_EMAIL_VERIFICATION=false
ENABLE_SMS_VERIFICATION=false
ENABLE_RATE_LIMITING=true
ENABLE_CACHING=false

# Gas Reporter (for development)
REPORT_GAS=false
COINMARKETCAP_API_KEY=your-coinmarketcap-api-key